{
  "presets": [
    "@babel/preset-env", "@babel/preset-react", "@babel/preset-typescript"
  ],
  "plugins": [
    "babel-plugin-macros",
    "@babel/plugin-transform-runtime",
    [
      "styled-components", { 
        "ssr": true, 
        "displayName": true, 
        "preprocess": false 
      }
    ],
    "@loadable/babel-plugin"
  ],
  "styledComponents": {
    "pure": true
  }
}